@model IIITS.Training.Web.Areas.Demo.Models.DemoModelEntity
@{
    ViewData["Title"] = "Demo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

@using (Html.BeginForm())
{
    <div class="page-title">
        <div class="row">
            <div class="col-md-12">
                <h3>
                    <span>Demo Data</span>
                </h3>
            </div>
        </div>
    </div>

    <div class="form-group col-md-3">
        <label>DropDown</label>
        @Html.DropDownListFor(m => m.DropDown, Model.lstItems, new { @class = "form-control chosen-select", id = "ddlItems" })
        <span class="text-danger" id="dspPvType"></span>
    </div>

    <div class="col-md-1"></div>

    <div class="form-group col-md-3">
        <label>Text Field</label>
        @Html.EditorFor(m => m.TextField, new { htmlAttributes = new { @class = "form-control", id = "txtTextField", @autocomplete = "off" } })
        <span class="text-danger" id="dspPvType"></span>
    </div>

    <div class="col-md-1"></div>

    <div class="form-group col-md-3">
        <label>Number Field</label>
        @Html.EditorFor(m => m.Number, new { htmlAttributes = new { @class = "form-control", id = "txtNumberField", @autocomplete = "off" } })
        <span class="text-danger" id="dspPvType"></span>
    </div>

    <div class="text-center">
        <button type="submit" id="btnBillRegister" class="btn-hover color-2">Submit</button>
    </div>
}

<script type="text/javascript">

    $(document).ready(function () {

        var ResponseType = '@ViewBag.ResponseCode';

        if (ResponseType != 0) {
            Swal.fire({
                text: '@ViewBag.ResponseMessage',
                icon: "success",
                confirmButtonText: "OK"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '..Demo/Demo';
                }
            });
        }
    });

</script>


